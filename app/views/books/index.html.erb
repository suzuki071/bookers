<% if flash[:notice] %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th class="table-head">Title</th>
      <th class="table-head">Body</th>
      <th class="table-head" colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |b| %>
      <tr>
        <td class="table-date"><%= b.title %></td>
        <td class="table-date"><%= b.body %></td>
        <td class="table-date"><%= link_to "Show", "/books/#{b.id}" %></td>
        <td class="table-date"><%= link_to "Edit", edit_book_path(b.id) %></td>
        <td class="table-date"><%= link_to "Destroy", book_path(b.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
    <div class="error_message">
      <h2 class="error_header"><%= @book.errors.count %> errors prohibited this obj from being saved</h2>
      <ul class="error_ul">
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <div class="field ">
      <div class="field_error">
        <label class="label">Title</label>
      </div>
      <div class="field_error">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="field">
      <div class="field_error">
        <label class="label">Body</label>
      </div>
      <div class="field_error">
        <%= f.text_area :body %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  <% else %>
    <div class="field">
      <label class="label">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label class="label">Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
  
<% end %>




