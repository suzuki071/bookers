<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
    <div class="error_message">
      <h2 class="error_header"><%= @book.errors.count %> errors prohibited this obj from being saved</h2>
      <ul class="error_ul">
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <div class="field ">
      <div class="field_error">
        <label class="label">Title</label>
      </div>
      <div class="field_error">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="field">
      <div class="field_error">
        <label class="label">Body</label>
      </div>
      <div class="field_error">
        <%= f.text_area :body %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit ' Update Book ', method: :update %>
    </div>
    <p>
      <%= link_to "Show", book_path %>
       | 
      <%= link_to "Back", books_path %>
    </p>
  <% else %>
    <div class="field">
      <label class="label">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label class="label">Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit ' Update Book ', method: :update %>
    </div>
    <p>
      <%= link_to "Show", book_path %>
       | 
      <%= link_to "Back", books_path %>
    </p>
  <% end %>
  
<% end %>
